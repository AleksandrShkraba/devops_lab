

{% for vhost in apache_vhosts %}
<VirtualHost *:80>
  ServerName {{ vhost.servername }}
  DocumentRoot {{ documentroot }}
  {% if serveradmin %}
  ServerAdmin {{ serveradmin }}
  {% endif %}
    <Directory {{ path }}>
     AllowOverride All
     Options Indexes FollowSymLinks
     Order allow,deny
     Allow from all
  </Directory>
</VirtualHost>
{% endfor %}